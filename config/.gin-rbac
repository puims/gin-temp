rules:
  - id: 1
    resource:
      host: "*"
      path: "/admin/*"
      method: "*"
    permission:
      authorized_roles: ["admin"]
      allow_anyone: false
  - id: 2
    resource:
      host: "*"
      path: "/user/*"
      method: "*"
    permission:
      authorized_roles: ["user", "admin"]
      allow_anyone: false
  - id: 3
    resource:
      host: "*"
      path: "/public/*"
      method: "*"
    permission:
      authorized_roles: []
      allow_anyone: true
